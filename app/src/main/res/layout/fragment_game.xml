<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    >



    <data>
        <variable
            name="viewModel"
            type="com.example.quadwrangle.game_view_model.ViewModelGame" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_vertical"
        tools:context=".game_view.MainActivity">

        <ImageView
            android:id="@+id/change_mode_button"
            android:layout_width="99dp"
            android:layout_height="51dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/save_game_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/save_game_button"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/change_mode" />

        <ImageView
            android:id="@+id/save_game_button"
            android:layout_width="103dp"
            android:layout_height="54dp"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.581"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/board"
            app:srcCompat="@drawable/save_game" />

        <ImageView
            android:id="@+id/current_color_image"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/board"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:srcCompat="@drawable/disc_black" />

        <TextView
            android:id="@+id/current_player_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="#FBD3D3"
            android:fontFamily="@font/bubblegum_sans"
            android:text="Current Player:"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/current_color_image"
            app:layout_constraintEnd_toEndOf="@+id/current_color_image"
            app:layout_constraintStart_toStartOf="@+id/current_color_image" />

        <TextView
            android:id="@+id/game_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="#FBD3D3"
            android:fontFamily="@font/bubblegum_sans"
            android:text="Game Type"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/current_player_text"
            app:layout_constraintEnd_toEndOf="@+id/current_color_image"
            app:layout_constraintStart_toStartOf="@+id/current_color_image" />

        <ImageView
            android:id="@+id/board"
            android:layout_width="406dp"
            android:layout_height="404dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.59"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="112dp"
            android:layout_height="93dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/board"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/black_count_bttn" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="112dp"
            android:layout_height="93dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/board"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:srcCompat="@drawable/white_count_bttn" />

        <TextView
            android:id="@+id/score1"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="10"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.422" />

        <TextView
            android:id="@+id/score2"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="10"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.487" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Shirley More 2023"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>