<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="406dp"
        android:layout_height="410dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/divider_horizontal_dark"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Quad Wrangle איך משחקים"
        android:textColor="#ECB2CD"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/text_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="מטרה"
        android:textColor="#ECB2CD"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_title"
        app:layout_constraintStart_toStartOf="@+id/text_title"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <TextView
        android:id="@+id/text_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="הוראות"
        android:textColor="#ECB2CD"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/instructions2"
        app:layout_constraintStart_toStartOf="@+id/instructions2"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="למשחק Quad Wrangle 3 חוקים / מהלכים פשוטים: 1.	גדילה  Growth– אבן יכולה לגדל אבן חדשה בריבוע ריק במאונך לה או באלכסון לה. כל אבני היריב המאונכות לאבן החדשה מומרות לאבנים מאותו הצבע. 2.	החלקה Slide – אבן יכולה להחליק על פני הלוח בקו ישר או באלכסון כמו מלכה בשחמט (לכל מיקום עד הגעה לאבן אחרת). כל אבני היריב הסמוכות למקום אליו האבן החליקה מומרות לאבנים מאותו הצבע. 3.	הטלה Drop – אם שני המהלכים הראשונים אינם זמינים, ניתן להוריד אבן ללוח בכל מקום פנוי שאינו צמוד לאבן מאותו הצבע. במהלך זה אבני היריב אינן מומרות. "
        android:textAlignment="center"
        android:textColor="#ECB2CD"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/text_title3"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/text_title3"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.897" />

    <TextView
        android:id="@+id/instructions2"
        android:layout_width="322dp"
        android:layout_height="41dp"
        android:text="להיות בעל המספר הגבוה ביותר של חיילים כשנגמר המקום בלוח"
        android:textAlignment="center"
        android:textColor="#ECB2CD"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/text_title2"
        app:layout_constraintStart_toStartOf="@+id/text_title2"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.319" />

</androidx.constraintlayout.widget.ConstraintLayout>